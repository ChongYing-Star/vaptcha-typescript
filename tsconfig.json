{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "baseUrl": "./",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node16",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "__mocks__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
